<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => Profile %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:occupations) %></dt>
      <dd><pre class="prettyprint"><%= @profile.occupations %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:skills) %></dt>
      <dd><pre class="prettyprint"><%= @profile.skills %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:education) %></dt>
      <dd><pre class="prettyprint"><%= @profile.education %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date_of_birth) %></dt>
      <dd><pre class="prettyprint"><%= @profile.date_of_birth %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:hometown) %></dt>
      <dd><pre class="prettyprint"><%= @profile.hometown %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:about) %></dt>
      <dd><pre class="prettyprint"><%= @profile.about %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              profiles_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_profile_path(@profile), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

