<%= form_for @group, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select :group_type, %w[Project Commmunity Organization], {} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :about, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :about, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :details, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :details, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :scope, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select :scope, %w[village town city state province country international idea] %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  groups_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
